---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Meine Tickets | Hannover 96" activePage="tickets" pageStyles={['tickets']}>
    <main class="tickets-main">
        <div class="container">
            <!-- Page Header -->
            <header class="tickets-header">
                <h1 class="tickets-header__title">Meine Tickets</h1>
                <p class="tickets-header__subtitle">Verwalte deine Tickets für Heimspiele in der HDI-Arena</p>
            </header>

            <!-- Not Logged In State -->
            <u-signin-root>
                <div class="tickets-not-logged-in">
                    <div class="tickets-not-logged-in__icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M2 9a3 3 0 0 1 0 6v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2a3 3 0 0 1 0-6V7a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2Z"/>
                            <path d="M13 5v2"/>
                            <path d="M13 17v2"/>
                            <path d="M13 11v2"/>
                        </svg>
                    </div>
                    <h2 class="tickets-not-logged-in__title">Anmeldung erforderlich</h2>
                    <p class="tickets-not-logged-in__text">Melde dich an, um deine Tickets zu sehen</p>
                    <button type="button" class="btn btn-primary" onclick="openLoginModal()">Jetzt anmelden</button>
                </div>
            </u-signin-root>

            <!-- Logged In State -->
            <u-signed-in>
                <div class="tickets-content">
                    <u-config
                        base-url="https://hannover96.staging.unidy.de"
                        api-key="b9671a31543ed2db7679511882ece8fcbd020f8ee996a3274026302a1834c82e"
                        locale="de"
                    ></u-config>

                    <!-- Active Tickets Section -->
                    <section class="tickets-section">
                        <div class="section-header">
                            <h2 class="section-title">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M2 9a3 3 0 0 1 0 6v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2a3 3 0 0 1 0-6V7a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2Z"/>
                                </svg>
                                Aktive Tickets
                            </h2>
                        </div>

                        <u-ticketable-list type="ticket" status="active">
                            <div class="tickets-grid" slot="tickets">
                                <!-- Tickets will be rendered here by Unidy SDK -->
                            </div>

                            <div class="empty-state" slot="empty">
                                <div class="empty-state__icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M2 9a3 3 0 0 1 0 6v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2a3 3 0 0 1 0-6V7a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2Z"/>
                                    </svg>
                                </div>
                                <h3>Keine aktiven Tickets</h3>
                                <p>Du hast aktuell keine aktiven Tickets für Heimspiele</p>
                            </div>
                        </u-ticketable-list>
                    </section>

                    <!-- Ticket History Section -->
                    <section class="tickets-section">
                        <div class="section-header">
                            <h2 class="section-title">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"/>
                                    <polyline points="12 6 12 12 16 14"/>
                                </svg>
                                Ticket-Verlauf
                            </h2>
                            <div class="section-filter">
                                <label class="filter-label" for="ticketStatusFilter">Status:</label>
                                <select id="ticketStatusFilter" class="filter-select">
                                    <option value="all">Alle</option>
                                    <option value="active">Aktiv</option>
                                    <option value="used">Verwendet</option>
                                    <option value="expired">Abgelaufen</option>
                                </select>
                            </div>
                        </div>

                        <u-ticketable-list type="ticket" page-size="5">
                            <div class="table-wrapper" slot="tickets">
                                <table class="tickets-table">
                                    <thead>
                                        <tr>
                                            <th>Veranstaltung</th>
                                            <th>Datum</th>
                                            <th>Platz</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Ticket rows will be rendered here by Unidy SDK -->
                                    </tbody>
                                </table>
                            </div>

                            <div class="table-pagination" slot="pagination">
                                <u-pagination-button direction="prev" class-name="pagination-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="15 18 9 12 15 6"/>
                                    </svg>
                                </u-pagination-button>
                                <u-pagination-page class-name="pagination-info"></u-pagination-page>
                                <u-pagination-button direction="next" class-name="pagination-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="9 18 15 12 9 6"/>
                                    </svg>
                                </u-pagination-button>
                            </div>

                            <div class="empty-state empty-state--small" slot="empty">
                                <p>Keine Tickets im Verlauf gefunden</p>
                            </div>
                        </u-ticketable-list>
                    </section>

                    <!-- CTA Section -->
                    <section class="tickets-cta">
                        <div class="cta-content">
                            <h2>Tickets für das nächste Heimspiel</h2>
                            <p>Sichere dir jetzt deine Tickets für die HDI-Arena</p>
                        </div>
                        <a href="https://www.hannover96.de/tickets" target="_blank" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                                <polyline points="15 3 21 3 21 9"/>
                                <line x1="10" y1="14" x2="21" y2="3"/>
                            </svg>
                            Tickets kaufen
                        </a>
                    </section>
                </div>
            </u-signed-in>
        </div>
    </main>
</Layout>
